<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Cicknime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryColor</item>
        <item name="colorOnPrimary">@color/textOrIconColor</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/darkPrimaryColor</item>
        <item name="colorOnSecondary">@color/textOrIconColor</item>
        <item name="android:textColorSecondary">@color/primaryText</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextFrame" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/textOrIconColor</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="TextContent.Primary">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextContent.Secondary">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextContent.SubText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextFrame.Title">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextFrame.Studio">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextFrame.Aired">
        <item name="android:textSize">12sp</item>
    </style>

</resources>