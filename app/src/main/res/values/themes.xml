<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Cicknime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/darkPrimaryColor</item>
        <item name="colorOnPrimary">@color/textOrIconColor</item>
        <item name="colorSecondary">@color/accentColor</item>
        <item name="colorSecondaryVariant">@color/darkPrimaryColor</item>
        <item name="colorOnSecondary">@color/textOrIconColor</item>
        <item name="android:textColorSecondary">@color/textOrIconColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="TextContent" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="TextContent.Primary">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextContent.Secondary">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="TextContent.Tertiary">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextContent.SubItem1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TextContent.SubItem2">
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
</resources>