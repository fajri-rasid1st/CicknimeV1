<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/list_bg"
    android:elevation="4dp">

    <io.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/rrv_poster_list"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shape_roundRect_bottomLeftRadius="8dp"
        app:shape_roundRect_bottomRightRadius="8dp"
        app:shape_roundRect_topLeftRadius="8dp"
        app:shape_roundRect_topRightRadius="8dp">

        <ImageView
            android:id="@+id/iv_poster_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            tools:ignore="ContentDescription"
            tools:src="@drawable/poster_3" />

    </io.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/tv_title_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_semibold"
        android:maxLines="2"
        android:textColor="@color/primaryText"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rrv_poster_list"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/title_of_anime" />

    <LinearLayout
        android:id="@+id/ll_rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/rrv_poster_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_list">

        <RatingBar
            android:id="@+id/rb_score_list"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:isIndicator="true"
            android:numStars="5"
            android:progressBackgroundTint="@color/secondaryText"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:stepSize="0.01"
            android:transformPivotX="0dp"
            android:transformPivotY="0dp" />

        <TextView
            android:id="@+id/tv_score_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryText"
            tools:text="0.00" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_synopsis_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins"
        android:maxLines="4"
        android:textColor="@color/secondaryText"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rrv_poster_list"
        app:layout_constraintTop_toBottomOf="@+id/ll_rating_bar"
        tools:text="@string/dummy_text" />

</androidx.constraintlayout.widget.ConstraintLayout>